package guia13;

import javax.swing.JOptionPane;

public class Principal {

    Flecha flecha1, flecha2, flecha3;

    public static void main(String[] args) {
        Principal miPrincipal = new Principal();
    }


    public Principal() {
        // Flecha 1: longitud por defecto
        flecha1 = new Flecha();
        flecha1.construirFlecha();
        flecha1.imprimirEspacio();

        // Flecha 2: longitud definida por el usuario
        flecha2 = new Flecha();
        // Solicitar longitud al usuario con JOptionPane
        String longitud2Str = JOptionPane.showInputDialog("Ingrese la longitud de la flecha 2:");
        // Convertir la entrada de longitud a entero
        int longitud2 = Integer.parseInt(longitud2Str);
        flecha2.setLongitud(longitud2);
        // Usar setter para establecer el color
        String color2 = elegirColor();
        flecha2.setColor(color2);
        flecha2.construirFlecha();
        flecha2.imprimirEspacio();

        // Flecha 3: longitud y color definidos por el usuario
        // Solicitar longitud al usuario con JOptionPane
        String longitud3Str = JOptionPane.showInputDialog("Ingrese la longitud de la flecha 3:");
        // Convertir la entrada de longitud a entero
        int longitud3 = Integer.parseInt(longitud3Str);
        // Solicitar color al usuario con JOptionPane
        String color3 = elegirColor();
        flecha3 = new Flecha(longitud3, color3);
        flecha3.construirFlecha();
        flecha3.imprimirEspacio();
    }

    // Método para mostrar un menú y elegir el color
    private String elegirColor() {
        String[] opciones = {"negro", "rojo"};
        int eleccion = JOptionPane.showOptionDialog(
            null,
            "Seleccione el color de la flecha:",
            "Elección de color",
            JOptionPane.DEFAULT_OPTION,
            JOptionPane.QUESTION_MESSAGE,
            null,
            opciones,
            opciones[0]
        );
        return opciones[eleccion];
    }
}